<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <RadioGroup
        android:id="@+id/radioGroupD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioGroupS"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonSeoulD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seoul" />

        <RadioButton
            android:id="@+id/radioButtonBusanD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busan" />

        <RadioButton
            android:id="@+id/radioButtonGwangjuD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gwangju" />

        <RadioButton
            android:id="@+id/radioButtonGyeongjuD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyeongju" />

        <RadioButton
            android:id="@+id/radioButtonDaeguD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daegu" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/radioGroupD"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonSeoul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seoul" />

        <RadioButton
            android:id="@+id/radioButtonBusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busan" />

        <RadioButton
            android:id="@+id/radioButtonGwangju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gwangju" />

        <RadioButton
            android:id="@+id/radioButtonGyeongju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyeongju" />

        <RadioButton
            android:id="@+id/radioButtonDaegu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daegu" />
    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="365dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp"/>

    <RadioGroup
        android:id="@+id/mode"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="27dp"
        android:checkedButton="@id/timeM">

        <RadioButton
            android:id="@+id/timeM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time" />

        <RadioButton
            android:id="@+id/distantM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="distant" />

        <RadioButton
            android:id="@+id/efficiencyM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eff" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>